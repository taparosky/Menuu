@model Order

<div class="container">

    <div class="jumbotron">
        <h2>@ViewBag.CompleteCheckoutMessage</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Customer: <strong>@Model.Name</strong></p>
            <p>Order Date: <strong>@Model.OrderSent</strong></p>
            <p>Order Number: <strong>@Model.OrderId</strong></p>

        <table class="table">
            <tr>
                <th></th>
                <th>Quantity</th>
                <th>Item</th>
                <th>Price</th>
            </tr>
            @foreach(var item in Model.OrderItems)
            {
                <tr>
                    <td><img src="@item.snack.ImageUrl" width="40" height="40"/></td>
                    <td>@item.Quantity</td>
                    <td>@item.snack.SnackName</td>
                    <td>@item.snack.Price</td>
                </tr>
            }
        </table>
        <h4>Order total amount: <strong>@(((decimal)ViewBag.OrderTotal).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align: center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return</a>
    </h3>
</div>