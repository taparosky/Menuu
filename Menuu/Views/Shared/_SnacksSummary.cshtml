@model Snack

    <div class="snack col-sm-6 col-md-6 col-lg-4">
        <p><img class="img" src="@Model.ImageUrl"></p>

        <a asp-controller="Snack" asp-action="Details"
        asp-route-snackId="@Model.SnackId">@Model.SnackName</a>

        <h4>@Model.Price.ToString("c")</h4>
        <p>@Model.ShortDescription</p>
        <div>
            <p class="button">
                <a class="btn btn-primary" id="cartButton" asp-controller="Cart"
                 asp-action="AddItemToCart" asp-route-snackId="@Model.SnackId">
                Add to cart
             </a>
            </p>
        </div>
    </div>